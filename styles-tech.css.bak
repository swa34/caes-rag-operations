:root {
    --primary: #4F46E5;
    --primary-dark: #4338CA;
    --secondary: #10B981;
    --dark-bg: #0F172A;
    --light-bg: #F8FAFC;
    --text: #0F172A;
    --text-secondary: #64748B;
    --border: #E2E8F0;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', sans-serif;
    line-height: 1.6;
    color: var(--text);
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
}

/* Search */
.search-bar-fixed {
    position: sticky;
    top: 0;
    background: white;
    border-bottom: 1px solid var(--border);
    padding: 12px 0;
    z-index: 1001;
}

.search-input {
    width: 100%;
    padding: 12px 20px;
    border: 2px solid var(--border);
    border-radius: 50px;
    font-size: 16px;
    font-family: inherit;
}

.search-input:focus {
    outline: none;
    border-color: var(--primary);
}

/* Navbar */
.navbar {
    position: sticky;
    top: 54px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border);
    z-index: 1000;
    padding: 1rem 0;
}

.navbar .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nav-brand {
    display: flex;
    align-items: center;
    gap: 12px;
}

.logo {
    font-size: 2rem;
}

.nav-brand h1 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary);
}

.nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
}

.nav-links a {
    text-decoration: none;
    color: var(--text-secondary);
    font-weight: 500;
    transition: color 0.3s;
}

.nav-links a:hover {
    color: var(--primary);
}

/* Hero */
.hero {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: white;
    padding: 80px 0 60px;
    text-align: center;
}

.hero-title {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    line-height: 1.2;
}

.gradient-text {
    background: linear-gradient(135deg, #fff 0%, #E0E7FF 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
}

.hero-subtitle {
    font-size: 1.25rem;
    opacity: 0.95;
    max-width: 700px;
    margin: 0 auto 2rem;
}

.hero-badges {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
}

.badge {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-size: 0.9rem;
}

/* Sections */
.section {
    padding: 80px 0;
}

.section-alt {
    background: var(--light-bg);
}

.section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
}

/* Technique Cards */
.technique-card {
    background: white;
    border: 2px solid var(--border);
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 2rem;
    transition: all 0.3s;
}

.technique-card:hover {
    border-color: var(--primary);
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.tech-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border);
}

.tech-header h3 {
    font-size: 1.5rem;
    color: var(--primary);
}

.tech-tag {
    background: var(--primary);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    font-size: 0.85rem;
}

.tech-body {
    display: grid;
    gap: 1.5rem;
}

.tech-section h4 {
    color: var(--primary);
    margin-bottom: 0.75rem;
    font-size: 1.125rem;
}

.tech-section ul {
    margin-left: 1.5rem;
}

.tech-section li {
    margin-bottom: 0.5rem;
}

/* Code Blocks */
.code-box {
    background: var(--dark-bg);
    border-radius: 8px;
    padding: 1.5rem;
    margin-top: 1rem;
}

.code-box pre {
    margin: 0;
    overflow-x: auto;
}

.code-box code {
    font-family: 'Fira Code', monospace;
    font-size: 0.9rem;
    color: #E0E7FF;
    line-height: 1.6;
}

.code-box small {
    display: block;
    margin-top: 1rem;
    color: #818CF8;
    font-size: 0.85rem;
}

/* Metrics */
.tech-metrics {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin-top: 1.5rem;
    padding: 1.5rem;
    background: var(--light-bg);
    border-radius: 8px;
}

.metric {
    text-align: center;
}

.metric span:first-child {
    display: block;
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-bottom: 0.25rem;
}

.metric span:last-child {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary);
}

/* Stack */
.stack-list {
    display: grid;
    gap: 1rem;
}

.stack-item {
    padding: 1rem;
    background: var(--light-bg);
    border-radius: 8px;
}

.stack-item strong {
    color: var(--primary);
    display: block;
    margin-bottom: 0.5rem;
}

.stack-item p {
    color: var(--text-secondary);
    font-size: 0.95rem;
}

.file-refs {
    margin-top: 2rem;
    padding: 1.5rem;
    background: var(--dark-bg);
    color: white;
    border-radius: 8px;
}

.file-refs h4 {
    color: white;
    margin-bottom: 1rem;
}

.file-refs code {
    color: #818CF8;
    font-family: 'Fira Code', monospace;
}

/* CTA */
.cta-section {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: white;
    text-align: center;
}

.cta-section h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
}

.cta-section p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
}

.btn-cta {
    display: inline-block;
    background: white;
    color: var(--primary);
    padding: 1rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.125rem;
    transition: all 0.3s;
}

.btn-cta:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

/* Footer */
.footer {
    background: var(--dark-bg);
    color: white;
    padding: 3rem 0;
    text-align: center;
}

.footer-meta {
    color: #94A3B8;
    font-size: 0.875rem;
    margin-top: 0.5rem;
}

/* Responsive */
@media (max-width: 768px) {
    .hero-title {
        font-size: 2rem;
    }

    .section-title {
        font-size: 1.75rem;
    }

    .nav-links {
        gap: 1rem;
        font-size: 0.9rem;
    }

    .tech-metrics {
        grid-template-columns: 1fr 1fr;
    }
}

/* Animations */
.technique-card {
    animation: fadeIn 0.6s ease-out;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

html {
    scroll-behavior: smooth;
}
